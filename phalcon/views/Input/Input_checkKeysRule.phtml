            Admin.ReDirect = function(ReDirect) {
                console.info(ReDirect);
                sharedData.ReDirect(ReDirect);
            }
            Admin.Logout = function() {
                sharedData.Logout(ReDirect);
            }

            Admin.Input_checkKeysRule = {};
            Admin.Input_checkKeysRule.UniqueID = "";
