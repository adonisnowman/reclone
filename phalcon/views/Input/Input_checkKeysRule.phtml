                promise.then(function(data) { // 呼叫承諾API獲取資料 .resolve  
                    Admin.checkKeys_List = data.List;
                    Admin.checkKeysPages = data.Pages;
                }, function(data) { // 處理錯誤 .reject  
                    console.info(data);
                });

            };
            Admin.checkKeys();


            Admin.Edit = function() {
                var data = {
                    'UniqueID': '',
                    'Action': 'Input_checkKeysRule',
                    'Data': JSON.stringify(Admin.Input_checkKeysRule)
                }
                var promise = sharedData.Edit(data);
                setTimeout(function() {
                    Admin.checkKeysRule();
                }, 500);
            };

